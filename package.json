{
  "name": "apollo-angular-monorepo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "website"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "ci-only:integration": "./scripts/integration tests",
    "deploy": "yarn workspaces run deploy",
    "format": "prettier --write \"{packages,website}/**/*.{ts,tsx,json}\"",
    "now-build": "(cd website && yarn && yarn build && mv build ../public)",
    "prebuild": "rimraf packages/*/build/",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "yarn workspaces run test",
    "test:e2e": "./scripts/run-e2e-locally.sh"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.1",
    "@angular-devkit/core": "^18.0.1",
    "@angular-devkit/schematics": "^18.0.1",
    "@angular/animations": "^18.0.0",
    "@angular/cli": "^18.0.1",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@apollo/client": "4.0.1",
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.3",
    "@schematics/angular": "^18.0.1",
    "@theguild/prettier-config": "^2.0.1",
    "@types/node": "^20.12.12",
    "browserlist": "^1.0.1",
    "graphql": "^16.8.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.5",
    "ng-packagr": "^19.0.0",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "rimraf": "^5.0.7",
    "rxjs": "~7.8.0",
    "shelljs": "^0.8.5",
    "tslib": "^2.3.0",
    "typescript": "5.4.5",
    "zone.js": "~0.14.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.ts": [
      "prettier --write"
    ]
  }
}
